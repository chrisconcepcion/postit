<%= render 'shared/header', header: "Editing #{@user.username}'s Profile" %>

<%= render 'shared/errors', obj: @user %>

<%= form_for @user do |f| %>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<br/>
	<%= f.label :email %>
	<%= f.text_field :email %>
	<br/>
	<%= f.label :about %>
	<%= f.text_field :about %>
	<br/>
	<%= f.submit "Update User Profile" %>
<% end %>