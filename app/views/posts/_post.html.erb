<div class="row">
  <div class='span0 well text-center'>

  </div>
  <%= render post.categories %>
    <h4><%= link_to post.title, post.url %></h4>
    <p>
      <%= post.description %>
    </p>
    <p>
      <span class="quiet">posted by</span> <%= link_to post.user.username, user_path(post.user_id) %>
     
    </p>
    <small>
      <span>
        <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </span>
    </small>
  </div>
</div>
