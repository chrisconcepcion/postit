<div class="row">
  <div class = 'span1 well text-center'>
      <% if logged_in? %>
        <%= link_to vote_post_path(post, vote: true), method: 'post', remote: true do %>
          <i class = 'icon-arrow-up'></i>
        <% end %>
      <% end %>
  </br>
  <span id= "post_<%= post.id %>_votes">
    <%= "#{post.total_votes} votes" %>
  </span>
  </br>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: false), method: 'post', remote: true do %>
        <i class = 'icon-arrow-down'></i>
      <% end %>
    <% end %>
  </br>
  </div>

  <div class = 'span8 well '>
        <% if ((logged_in? && current_user.id == post.user_id) || current_user.admin?) %>
      <div class="pull-right">
        <%= link_to "Edit", edit_post_path(post), class: 'btn btn-small' %>
        <% if current_user.admin? %>
          
          <%= button_to 'Delete', post, :method => :delete, :confirm => 'Are you sure?' %>
        <% end %>

      </div>
      <% end %>
    <% post.categories.each do |category| %>
      <%= render 'categories/category', category: category %>
    <% end %>
    <h4><%= link_to post.title, fix_url(post.url) %></h4>
    
    <p><%= post.description %></p>
        <% if (post.created_at - post.updated_at) < 0 %>
    <small><p><span class="quiet">by</span> <%= link_to @post.user.username, user_path(post.user_id) %> at <%= display_datetime(post.created_at) %><i>(Last edit by <%= login_name %> at <%= post.updated_at%>)</i></p></small>
    <small>
    <% else %>
     <small><p><span class="quiet">by</span> <%= link_to post.user.username, user_path(post.user_id) %> at <%= display_datetime(post.created_at) %></p></small>
    <small>
    <% end %>
      <span>
        <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </span>
    </small>
  </div>
</div>
