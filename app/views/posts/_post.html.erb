<div class="row">
  <div class = 'span1 well text-center'>
    <%= link_to vote_post_path(post, vote: true), method: post do %>
    <i class = 'icon-arrow-up'></i>
    <% end %>
  </br>
  <%= "#{post.total_votes} votes" %>
  </br>
    <%= link_to vote_post_path(post, vote: false), method: post do %>
    <i class = 'icon-arrow-down'></i>
    <% end %>
  </br>
  </div>

  <div class = 'span8 well '>
        <% if logged_in? && current_user.id == post.user_id  %>
      <div class="pull-right">
        <%= link_to "Edit", edit_post_path(post.id), class: 'btn btn-small' %>
      </div>
      <% end %>
    <% post.categories.each do |category| %>
      <%= render 'categories/category', category: category %>
    <% end %>
    <h4><%= link_to post.title, post.url %></h4>
    
    <p><%= post.description %></p>
    <small><p><span class="quiet">posted by</span> <%= link_to post.user.username, user_path(post.user_id) %></p></small>
    <small>
      <span>
        <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </span>
    </small>
  </div>
</div>
