<div class="row">
  <div class = 'span1 well text-center'>
    <%= link_to vote_post_path(@post, vote: true), method: 'post', remote: true do %>
    <i class = 'icon-arrow-up'></i>
    <% end %>
  </br>
  <span id="post_<%= @post.id %>_votes">
    <%= "#{@post.total_votes} votes" %>
  </span>
  </br>
    <%= link_to vote_post_path(@post, vote: false), method: 'post', remote: true do %>
    <i class = 'icon-arrow-down'></i>
    <% end %>
  </br>
  </div>

	<div class = 'span8 well '>
		<% if logged_in? && current_user.id == @post.user_id  %>
			<div class="pull-right">
				<%= link_to "Edit", edit_post_path, class: 'btn btn-small' %>
			</div>
		<% end %>
				<div class='text-left'>
			<% @post.categories.each do |category| %>
				<%= render 'categories/category', category: category%>
			<% end %>
		</div>
		<h4><%= link_to @post.title, @post.url %></h4>
		
		<p><%= @post.description %></p>
		<div class="pull-left">
			<h6>Categories:</h6>
		</div>
	</br>
	</br>


		<div class="pull-left">
			<small><span class="quiet">by <%= link_to @post.user.username, user_path(@post.user_id) %> at 12:00:00</span></small>
		</div>
	</br>
		<hr>
		<div class="pull-left">
		<h5>Comments:</h5>
	</div>
</br>
</br>
			<% @post.comments.each do |comment| %>
				<ul>	
					<%=render 'comments/comment', comment: comment %>
				</ul>	
			<% end %>
				

	<% if logged_in? %>
		<%= form_for [@post, @comment] do |f| %>
			<%= f.label "Post a Comment:" %>
			<%= f.text_field :comment %>
			<% f.label :post_id %>
			</br>
			<%= f.submit %>
		<% end %>
	<% end %>
</div>
	
</div>



