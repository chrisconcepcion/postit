<div class="row">
  <div class = 'span1 well text-center'>
      <% if logged_in? %>
        <%= link_to vote_post_path(@post, vote: true), method: 'post', remote: true do %>
          <i class = 'icon-arrow-up'></i>
        <% end %>
      <% end %>
  </br>
  <span id= "post_<%= @post.id %>_votes">
    <%= pluralize(@post.total_votes, 'vote') %>
  </span>
  </br>
    <% if logged_in? %>
      <%= link_to vote_post_path(@post, vote: false), method: 'post', remote: true do %>
        <i class = 'icon-arrow-down'></i>
      <% end %>
    <% end %>
  </br>
  </div>

  <div class = 'span8 well '>
    <% if logged_in? && current_user.id == @post.user_id  %>
    	<div class="pull-right">
        	<%= link_to "Edit", edit_post_path(@post), class: 'btn btn-small' %>
      	</div>
    <% end %>
    <% @post.categories.each do |category| %>
      <%= render 'categories/category', category: category %>
    <% end %>
    <h4><%= link_to @post.title, fix_url(@post.url) %></h4>
    
    <p><%= @post.description %></p>
    <% if @post.created_at != @post.updated_at %>
    <small><p><span class="quiet">by</span> <%= link_to @post.user.username, user_path(@post.user_id) %> at <%= display_datetime(@post.created_at) %><i>(Last edit by <%=link_to @post.updated_by, user_path(user_by_name @post.updated_by) %> at <%= @post.updated_at%>)</i></p></small>
    <small>
    <% else %>
     <small><p><span class="quiet">by</span> <%= link_to @post.user.username, user_path(@post.user_id) %> at <%= display_datetime(@post.created_at) %></p></small>
    <small>
    <% end %>
	<hr>
	<div class="pull-left">
		<h5>Comments:</h5>
	</div>
	</br>
	</br>
			<% @post.comments.each do |comment| %>
				<ul>	
					<%=render 'comments/comment', comment: comment %>
				</ul>	
			<% end %>
				

	<% if logged_in? %>
		<%= form_for [@post, @comment] do |f| %>
			<%= f.label "Post a Comment:" %>
			<%= f.text_field :comment %>
			<% f.label :post_id %>
			</br>
			<%= f.submit %>
		<% end %>
	<% end %>
</div>
	
</div>



