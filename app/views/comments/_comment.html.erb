<% show_post ||= false %>

<div class="row" >
  <div class='span0 well text-center'>
    <%= link_to vote_post_comment_path(@post.id, comment.id, vote: true), method: :post do %>
    <i class = 'icon-arrow-up'></i>
    <% end %>
  </br>
  <%= "#{comment.total_votes} votes" %>
  </br>
    <%= link_to vote_post_comment_path(@post.id, comment.id, vote: false), method: :post do %>
    <i class = 'icon-arrow-down'></i>
    <% end %>
  </br>
  </div>
  <div class='well span5'>
    <em>"<%= comment.comment %>"</em>
    <% if show_post %>
      on <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>
    <br/>
    <span class="quiet">by</span> <%= link_to comment.user.username, user_path(comment.user_id) %>

  </div>
</div>
