<% show_post ||= false %>

<div class="row" >
  <div class='span0 well text-center comment_votes'>

  </div>
  <div class='well span8'>
    <em>"<%= comment.comment %>"</em>
    <% if show_post %>
      on <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>
    <br/>
    <span class="quiet">by</span> <%= link_to comment.user.username, user_path(comment.user_id) %>

  </div>
</div>
